<Page x:Class="Project.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid Loaded="Grid_Loaded">
        <Grid Margin="60">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                <TextBlock Margin="10,0,10,5" Text="Логин" />
                <ComboBox Margin="10,0,10,15" x:Name="loginBox" ></ComboBox>
                <TextBlock Margin="10,0,10,5" Text="Пароль"  />
                <TextBox Margin="10,0,10,15" Width="300" x:Name="passBox"></TextBox>
                <Button Margin="15" Width="140" Click="Button_Click">Войти</Button>
            </StackPanel>

        </Grid>
    </Grid>
</Page>
